<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>SaveArticleServlet</servlet-name>
        <servlet-class>web.SaveArticleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadArticleServlet</servlet-name>
        <servlet-class>web.LoadArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SaveArticleServlet</servlet-name>
        <url-pattern>/saveArticleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadArticleServlet</servlet-name>
        <url-pattern>/loadArticleServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>KaptchaServlet</servlet-name>
        <servlet-class>com.google.code.kaptcha.servlet.KaptchaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KaptchaServlet</servlet-name>
        <url-pattern>/K</url-pattern>
    </servlet-mapping>
</web-app>